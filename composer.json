{
    "name": "tunaqui/utils",
    "type": "library",
    "description": "Utils PHP functions",
    "keywords": [
        "Tunaqui",
        "Utils"
    ],
    "homepage": "https://github.com/tunaqui-solutions/utils",
    "license": "MIT",
    "authors": [
        {
            "name": "EstevanTn",
            "email": "tunaqui@outlook.es",
            "homepage": "https://github.com/EstevanTn",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Tunaqui\\Utils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tunaqui\\Utils\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "composer", 
            "url": "https://packagist.org"
       },
       { "packagist": false }
    ]
}
